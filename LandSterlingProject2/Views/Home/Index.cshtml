                    </div>
                </div>
            </div>
            <div class="offers-row">
                <div class="first-row d-flex">
                    @for (int i = 0; i < ViewBag.Properties.Length; i++)
                    {

                        <div class="offers-card col-lg-4 col-md-6 col-12 p-0" onclick="OnUnitClick(@{@Html.Raw(ViewBag.Properties[i].RecordId)})">
