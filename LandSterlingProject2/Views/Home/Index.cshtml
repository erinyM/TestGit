<script>
    let LocationHeader = document.getElementById("location-header");
    let propertyHeader = document.getElementById("Property-type-header")
    let byPropertytype = document.getElementById("by-property-type");
    let bylocation = document.getElementById("by-location")

    LocationHeader.addEventListener("click", function () {
        propertyHeader.classList.remove("active")
        LocationHeader.classList.add("active");
        
        byPropertytype.classList.add("hide-div")
        bylocation.classList.remove("hide-div")
    })

    propertyHeader.addEventListener("click", function () {
        LocationHeader.classList.remove("active")
        propertyHeader.classList.add("active");
       
        bylocation.classList.add("hide-div")
        byPropertytype.classList.remove("hide-div")
    })




    

</script>